<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.royrodriguez.papiroos">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="ir.figureapp.papiroos.Base"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:label="@string/activity_edit_phone"
            android:name="ir.figureapp.papiroos.activity.EditActivity"/>
        <activity android:label="@string/activity_profile"
            android:name="ir.figureapp.papiroos.activity.ProfileActivity" />
        <activity android:label="@string/activity_address"
            android:name="ir.figureapp.papiroos.activity.AddressActivity" />
        <activity android:label="@string/activity_requests"
            android:name="ir.figureapp.papiroos.activity.RequestsActivity" />
        <activity android:label="@string/activity_newrequest"
            android:name="ir.figureapp.papiroos.activity.NewRequestActivity" />
        <activity android:label="@string/app_name"
            android:name="ir.figureapp.papiroos.activity.MainActivity" />
        <activity
            android:name="ir.figureapp.papiroos.activity.LoginActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>